        id: screen_mngr

        MDScreen:
            id: login
            name: 'login'
            md_bg_color : [147/255,182/255,124/255,1]
            orientation: "vertical"

            MDFloatLayout:
                MDCard :
                    margin : 10
                    size_hint: None,None
                    size: 310,580
